#!/bin/sh
#
# Miner starter
#

. /etc/common-defs

DAEMON=/usr/local/bin/miner_starter

case "$1" in
start)
	${DAEMON} passive &
	;;
stop)
	${DAEMON} stop
	;;
restart|reload)
	echo "Restarting ${DAEMON}, please wait ..."
	"$0" stop
	sleep 5
	"$0" start
	;;
*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?



