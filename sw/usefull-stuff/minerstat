#!/bin/bash

#  "Lastgetwork": 1402929178,
#  "PoolStale%": 0,
#  "PoolRejected%": 0.7822,
#  "DeviceRejected%": 10.3391,
#  "DeviceHardware%": 0.0126,
#  "BestShare": 390309,
#  "DifficultyStale": 0,
#  "DifficultyRejected": 4095.9375,
#  "DifficultyAccepted": 519544.07226562,
#  "WorkUtility": 1319.99,
#  "TotalMH": 2249909000,
#  "NetworkBlocks": 5,
#  "RemoteFailures": 0,
#  "Getworks": 48,
#  "FoundBlocks": 0,
#  "MHS15m": 1079514.38,
#  "MHS5m": 1242943.7,
#  "MHS1m": 1244568.43,
#  "MHS5s": 1244226.64,
#  "MHSav": 1249435.63,
#  "Elapsed": 1801,
#  "Accepted": 294,
#  "Rejected": 2,
#  "HardwareErrors": 5,
#  "Utility": 9.8,
#  "Discarded": 1030,
#  "Stale": 0,
#  "GetFailures": 0,
#  "LocalWork": 30743

#  "Temparaturerearbot": 72,
#  "Temparaturereartop": 68,
#  "Temparaturefront": 28,



if [ $# -lt 1 ] ; then
	echo "usage: $0 <miner>"
	exit 2
fi

jq > /dev/null 2>&1
if [ ! $? -eq 1 ] ; then
	echo "jq (JSON parser) is not installed, or not in path. Install it!"
	exit 127
fi
		
IP=$1
HEADER=$2

ping -c 1 -W 1 $IP > /dev/null 2>&1
if [ $? -eq 0 ] ; then

	MINER_MON=`wget http://admin:admin@${IP}/monitor.php -O- 2>/dev/null`

	if [ $? -eq 0 ] ; then
		echo ${MINER_MON} | jq . >/dev/null 2>&1
		if [ ! $? -eq 0 ] ; then
			wget --post-data "agree=true" "http://admin:admin@${IP}/settings.php" 2>/dev/null
			MINER_MON=`wget http://admin:admin@${IP}/monitor.php -O- 2>/dev/null`
			echo ${MINER_MON} | jq . >/dev/null 2>&1
			if [ ! $? -eq 0 ] ; then
				echo $IP,WGET-FAIL
				exit 1	
			fi
		fi
		MINER_SN=`echo ${MINER_MON} | jq .miner.board_ver`
		MINER_MAC=`echo ${MINER_MON} | jq .miner.mac`		
		MINER_FWVER=`echo ${MINER_MON} | jq .miner.fw_ver`
		MINER_GATE_STATUS=`echo ${MINER_MON} | jq .mg_status`

		MINER_GH=`echo ${MINER_MON} | jq .stats.ASICstotalrate`
		CGMINER_5S_GH=`echo ${MINER_MON} | jq .summary[0].MHS5s`
		ERRORS=`echo ${MINER_MON} | jq .summary[0].HardwareErrors`
		ACCEPTED=`echo ${MINER_MON} | jq .summary[0].Accepted`

		FRONT_TEMP=`echo ${MINER_MON} | jq .stats.Temparaturefront`
		REAR_TEMP_TOP=`echo ${MINER_MON} | jq .stats.Temparaturereartop`
		REAR_TEMP_BOT=`echo ${MINER_MON} | jq .stats.Temparaturerearbot`


		POOL1_URL=`echo ${MINER_MON} | jq .conf.pools[0].url`
		POOL1_WALLET=`echo ${MINER_MON} | jq .conf.pools[0].user`
		POOL2_URL=`echo ${MINER_MON} | jq .conf.pools[1].url`
		POOL2_WALLET=`echo ${MINER_MON} | jq .conf.pools[1].user`
		POOL3_URL=`echo ${MINER_MON} | jq .conf.pools[2].url`
		POOL3_WALLET=`echo ${MINER_MON} | jq .conf.pools[2].user`

		UNIT_UPTIME=`echo ${MINER_MON} | jq .miner.uptime`
		CGMINER_UPTIME=`echo ${MINER_MON} | jq .stats.Elapsed`
		
		


		if [ "$HEADER" == "1" ] ; then
			echo "IP,MINER_SN,MINER_MAC,MINER_FWVER,MINER_GATE_STATUS,MINER_GH,CGMINER_5S_GH,ERRORS,ACCEPTED,FRONT_TEMP,REAR_TEMP_TOP,REAR_TEMP_BOT,POOL1_URL,POOL1_WALLET,POOL2_URL,POOL2_WALLET,POOL3_URL,POOL3_WALLET,UNIT_UPTIME,CGMINER_UPTIME"
		fi

		echo "$IP,$MINER_SN,$MINER_MAC,$MINER_FWVER,$MINER_GATE_STATUS,$MINER_GH,$CGMINER_5S_GH,$ERRORS,$ACCEPTED,$FRONT_TEMP,$REAR_TEMP_TOP,$REAR_TEMP_BOT,$POOL1_URL,$POOL1_WALLET,$POOL2_URL,$POOL2_WALLET,$POOL3_URL,$POOL3_WALLET,$UNIT_UPTIME,$CGMINER_UPTIME"
	else
		echo $IP,WGET-FAIL
	fi

else
	echo $IP,NO-PING
fi
